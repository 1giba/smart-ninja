# SmartNinja Environment Configuration
# Rename this file to .env and fill in your API keys

# Bright Data Proxy Settings
BRIGHTDATA_HOST=your_bright_host_here
BRIGHTDATA_PORT=your_bright_port_here

# Bright Data API Keys
BRIGHT_DATA_KEY=your_bright_data_key_here
BRIGHT_DATA_USERNAME=your_bright_data_username
BRIGHT_DATA_PASSWORD=your_bright_data_password

# AI Service (OpenAI)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4 if available
OPENAI_TIMEOUT=30

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./smartninja.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost/smartninja

# Scraping Configuration
MCP_SCRAPE_PRICES_URL=http://localhost:8001/scrape_prices
SCRAPING_INTERVAL_MINUTES=60  # How often to refresh price data
MAX_SCRAPING_THREADS=5  # Maximum parallel scraping threads

# Application Settings
DEBUG_MODE=False  # Set to True for development
ENABLE_CACHING=True  # Enable data caching
CACHE_DURATION_HOURS=24  # Cache duration in hours
