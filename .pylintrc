
[MASTER]
ignore=venv, migrations, __pycache__

[MESSAGES CONTROL]
disable=
    C0114,  # Missing module docstring (kept disabled to focus on functional code)
    C0115,  # Missing class docstring
    C0116,  # Missing function or method docstring
    R0801,  # Duplicate code (there may be intentional patterns)
    W0511,  # TODO comments
    W0703,  # Catching too general exception (we warn via comment if necessary)

[FORMAT]
max-line-length=100

[DESIGN]
max-args=5
max-locals=15
max-branches=10
max-statements=50
max-parents=7
max-attributes=10
max-public-methods=20
min-public-methods=1

[BASIC]
variable-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
inlinevar-rgx=[a-z_][a-z0-9_]{2,30}$

[REPORTS]
output-format=colorized
reports=no
score=yes
